<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" tools:ignore="StateListReachable">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <padding android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke android:width="2dp" android:color="@color/main_dark_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp" />
            <padding android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke android:width="2dp" android:color="@color/main_dark_orange" />
        </shape>
    </item>
</selector>